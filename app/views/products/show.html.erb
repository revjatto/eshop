<p id="notice"><%= notice %></p>

<p>
  <strong>Product Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency @product.price, unit: 'GBP', FORMAT: '%n %u' %>
</p>
<p>
  <strong>Image:</strong>
  <%= image_tag @product.image_url, width: 200 %>
</p>

<p>
  <strong>Stock Availability:</strong>
  <%= @product.stock.nonzero? || 'Out of Stock' : @product.stock %>
</p>
<p><%= link_to 'Buy', checkout_product_path(@product) %></p>
<p><%= link_to 'Edit', edit_product_path(@product) %></p>
<p><%= link_to 'Back to Product', products_path %></p>
<p><%= link_to "Delete", product_path(@product), method: :delete, data:{ confirm: "Are you sure you want to delete this record?" }  %></p>